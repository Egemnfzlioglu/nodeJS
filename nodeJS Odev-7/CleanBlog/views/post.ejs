<%- include('partials/_header') -%>

  <body>

    <%- include('partials/_navigation') -%>

      <!-- Page Header -->
      <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="post-heading">


                <h2 class="subheading">
                  <%= post.title %>

                </h2>
                <span class="meta">Posted by
                  <a href="#">Start Bootstrap</a>
                  <%= post.dateCreated %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Post Content -->
      <article>

        <div class="container">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">


              <h2 class="subheading">
                <%= post.title %>

              </h2>

            </div>
          </div>

          <h1>
          </h1>
          <div class="row">



            <div class="col-lg-8 col-md-10 mx-auto">
              <img
                src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b6/Image_created_with_a_mobile_phone.png/640px-Image_created_with_a_mobile_phone.png"
                alt="post_photo">
              <p>
                <%= post.detail %>
              </p>
              <div class="my-3 py-3">

                <span class="meta">Posted by
                  <a href="#">Start Bootstrap</a>
                  <%= post.dateCreated %>
                </span>
              </div>

              <div class="tm-bg-gray tm-share-box">

                <a href="/posts/edit/<%= post._id %>"
                  class="btn btn-lg btn-warning p-2 tm-btn-animate tm-btn-download tm-icon-download">
                  <span>Update Post</span>
                </a>

                <a href="/posts/<%= post._id %>?_method=DELETE" onclick="return confirm('ARE YOU SURE ? ')"
                  class="btn btn-lg btn-danger p-2 tm-btn-animate tm-btn-download tm-icon-download">
                  <span>Delete Post</span>
                </a>


              </div>
            </div>
          </div>
        </div>
      </article>


      <hr>

      <%- include("partials/_footer") %>